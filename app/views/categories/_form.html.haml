= form_with model: @category, local: true do |f|
  -if @category.errors.any?
    #errors
      %p
        = pluralize(@category.errors.count, "error")
        Prevented this recipe from saving
      %ul
        -@category.errors.full_messages.each do |msg|
          %li= msg
  .form-group

    = f.text_field :title
    = f.submit :submit

