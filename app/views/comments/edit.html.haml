%h2.text-center= t('comments.edit.title')
= render 'comments/errors'
= simple_form_for @comment do |f|
  .form-group
    = f.label :commenter, class: 'control-label'
    = f.text_field :commenter, value: current_user.username, class: 'form-control'
  .form-group
    = f.label :body, class: 'control-label'
    = f.text_field :body, class: 'form-control'
    = f.submit t('links.save')