%h2 Comments:
- @image.comments.each do |comment|
  %p Commenter:
  = comment.commenter
  %p Comment:
  = comment.body
  %p
    = link_to 'Destroy Comment', comment_path(category_slug: @image.category.slug, image_id: @image.id, id: comment.id),
    method: :delete,
    data: { confirm: 'Are you sure?' }
    = link_to "Edit", edit_comment_path(comment)

